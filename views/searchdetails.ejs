<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/meta') %>
    </head>
    <body data-bs-theme="light">
        <%- include('partials/nav') %>
        <section class="container">
                <article id="search">
                <div class="container">
                    <div class="row">
                    <div class="card shadow-lg p-3 mb-3 bg-body rounded m-4 col" style="width: 30rem;">
                        <h5 class="card-header">Ref No</h5>
                        <div class="card-body">
                            <form class="d-flex" id="formSearchaof">
                                <div class="m-2">
                                    <select class="form-control" name="type" id="searchaof" required>
                                        <option value="FISTACK_AOFNO" selected>Search Ref No</option>
                                    </select>
                                </div>
                                <div class="m-2">
                                    <input class='form-control' type="text" id="firstidno" name="firstidno">
                                </div>
                                <div class="m-2">
                                    <input class="btn  btn-primary btn-sm" type="submit" value="Search">
                                </div>
                            </form>
                        </div>
                    
                    </div>
                    
                    <div class="card shadow-lg p-3 mb-3 bg-body rounded m-4 col" style="width: 30rem;">
                        <h5 class="card-header">Agent Details</h5>
                        <div class="card-body">
                            <form class="d-flex" id="formSearchagentdetails">
                                <div class="m-2">
                                    <select class="form-control" name="type" id="searchagentdetails" required>
                                        <option value="FISTACK_INB_BCMASTER" selected>Search Agent details</option>
                                    </select>
                                </div>
                                <div class="m-2">
                                    <input class='form-control'type="text" id="koid" name="koid">
                                </div>
                                <div class="m-2">
                                    <input class="btn  btn-primary btn-sm" type="submit" value="Search">
                                </div>
                            </form>
                        </div>
                    </div>
                    </div>
                    </div>
                    <div id="searchtable" class="m-4">
                    </div>
                    <!-- loader  -->
                    <div id="searchLoader" class="text-center mt-2">
                        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                        </div>
                    </div>
                </article>
        </section>
        <%- include('partials/darkMode') %>
        <%- include('partials/navActive') %>
        <%- include('partials/navScript') %>
        <%- include('partials/useFetch') %>
        <%- include('partials/script') %>
        <script>
            formSearchaof.onsubmit = async (e) => handleSubmit(e, formSearchaof, 'searchLoader')
            formSearchagentdetails.onsubmit = async (e) => handleSubmit(e, formSearchagentdetails, 'searchLoader')
        </script>
    </body>
</html>